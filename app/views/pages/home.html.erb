  <script>
    const coll = document.getElementsByClassName("collapsible");

    for (let i = 0; i < coll.length; i++) {
      coll[i].addEventListener("click", function() {
        this.classList.toggle("active");
        let content = this.nextElementSibling;
        if (content.style.maxHeight){
          content.style.maxHeight = null;
        } else {
          content.style.maxHeight = content.scrollHeight + "px";
        }
      });
    }

    function changeIcon(anchor) {
      const icon = anchor.querySelector("i");
      icon.classList.toggle('fa-square-plus');
      icon.classList.toggle('fa-square-minus');
    }

    const showWindow = document.querySelector(".show-window");
    const showButton = document.querySelector(".show-button");
    const closeButton = document.querySelector(".close-button");
    const overlay = document.querySelector(".overlay");

    const closeWindow = function() {
      showWindow.classList.add("hidden");
      overlay.classList.add("hidden");
    };

    showButton.addEventListener("click", function () {
      showWindow.classList.remove("hidden");
      overlay.classList.remove("hidden");
    });

    closeButton.addEventListener("click", closeWindow);

    overlay.addEventListener("click", closeWindow);

    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && !showWindow.classList.contains("hidden")) {
        closeWindow();
      }
    });

  </script>

